{
  "manifest_version": 3,
  "name": "Ethical Extension",
  "description": "An extension which determines if the current link is ethical or not",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["*://*/"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_icon": "base_icon.png",
    "default_title": "Ethical Extension"
  }
}
